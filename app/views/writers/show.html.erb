<div class="w-full min-h-[min(60vw,_900px)] flex flex-col items-end bg-[url('pencil.jpg')] bg-contain bg-no-repeat bg-center bg-top">
  <div class="mt-10 sm:mr-10 w-[clamp(290px,_70vw,_1000px)] grid grid-cols-1 grid-rows-[auto,_1fr] rounded-lg shadow-md">
    <div class="rounded-t-lg p-5 bg-neutral-600 grid grid-cols-1 sm:grid-cols-[auto,_1fr] gap-5 text-neutral-50">
      <span class="h-32 w-32 self-center justify-self-center rounded-full bg-seafoam-100 text-2xl text-neutral-50 font-semibold lowercase flex items-center justify-center">
        <%= @writer.initial %>
      </span>
      <div class="flex flex-col gap-3 self-center">
        <h2 class="uppercase text-3xl border-b border-neutral-50"><%= name(@writer.profile) %></h2>
        <div class="flex flex-wrap gap-1">
          <!-- TODO: replace temp buttons with actual -->
          <button class="px-3 py-1 rounded-full bg-neutral-50 text-neutral-700">w</button>
          <button class="px-3 py-1 rounded-full bg-neutral-50 text-neutral-700">?</button>
          <button class="px-3 py-1 rounded-full bg-neutral-50 text-neutral-700">message</button>
          <%= link_to "Hire", writer_products_path(@writer), class: "lowercase px-3 py-1 rounded-full bg-neutral-50 text-neutral-700" %>
        </div>
        <p><%= @writer.profile.about %></p>
        <div>
          <h3 class="uppercase tracking-wider font-semibold">Specialties</h3>
          <%= render "shared/specialties", writer: @writer %>
        </div>
      </div>
    </div>
    <div class="rounded-b-lg p-5 bg-white">
      <% @writer.writing_samples.selected.each do |sample| %>
        <%= render "writing_sample", writing_sample: sample %>
      <% end %>
    </div>
  </div>
</div>