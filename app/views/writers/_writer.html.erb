<div class="rounded-lg p-5 bg-neutral-600 grid grid-cols-1 sm:grid-cols-[auto,_1fr] gap-5 text-neutral-50">
  <span class="h-12 w-12 sm:h-12 sm:w-12 rounded-full bg-seafoam-100 text-2xl text-neutral-50 font-semibold lowercase flex items-center justify-center">
    <%= writer.initial %>
  </span>
  <div class="flex flex-col gap-3 self-center">
    <div class="flex flex-wrap justify-between gap-1 border-b border-neutral-50 pb-3">
      <h2 class="uppercase text-3xl"><%= name(writer.profile) %></h2>
      <%= link_to "Details", writer_path(writer), class: "lowercase px-5 py-1 flex items-center rounded-full bg-neutral-50 text-neutral-700" %>
    </div>
    <p><%= writer.profile.about %></p>
    <%= render "shared/specialties", writer: writer %>
  </div>
</div>

