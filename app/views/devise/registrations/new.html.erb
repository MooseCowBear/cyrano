<div class="grid grid-cols-1 sm:grid-cols-2 gap-5 p-5 sm:px-10">
  <div class="flex flex-col justify-center">
    <div class="mb-5">
      <h2 class="text-2xl uppercase font-semibold text-center">Sign up</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "flex flex-col gap-2" }) do |f| %>
        <div class="field flex flex-col">
          <%= f.label :email %>
          <% f.object.errors.full_messages_for(:email).each do |msg| %>
            <span class="text-pink-500 text-sm lowercase"><%= msg %></span>
          <% end %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"w-full border-neutral-700" %>
        </div>

        <div class="field flex flex-col">
          <span class="flex gap-1">
            <%= f.label :password %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %>
          </span>
          <% f.object.errors.full_messages_for(:password).each do |msg| %>
            <span class="text-pink-500 text-sm lowercase"><%= msg %></span>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password", class:"w-full border-neutral-700" %>
        </div>

        <div class="field flex flex-col">
          <%= f.label :password_confirmation %>
          <% f.object.errors.full_messages_for(:password_confirmation).each do |msg| %>
            <span class="text-pink-500 text-sm lowercase"><%= msg %></span>
          <% end %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full border-neutral-700" %>
        </div>

        <div class="field flex gap-2 items-center">
          <%= f.check_box :writer, checked: params[:writer], class: "text-neutral-700" %>
          <%= f.label :writer, "I want to write" %>
        </div>

        <div class="actions">
          <%= f.submit "Sign up", class: "w-full tracking-wide border rounded-full py-1 border-neutral-700 py-1 hover:bg-neutral-700 hover:text-neutral-50 hover:cursor-pointer" %>
        </div>
      <% end %>
    </div>

    <%= render "devise/shared/links" %>
  </div>
  <%= image_tag "typewriter.jpg" %>
</div>