<%= form_with model: profile, class: "flex flex-col gap-2" do |form| %>
  <div class="flex flex-col gap-1">
    <div class="flex gap-1 justify-between">
      <%= form.label :username, "Username", class: "lowercase" %>
      <% form.object.errors.full_messages_for(:username).each do |msg| %>
        <span class="text-pink-500 text-sm lowercase"><%= msg %></span>
      <% end %>
    </div>
    <%= form.text_field :username, class: "w-full" %>
  </div>

  <div class="flex flex-col gap-1">
    <div class="flex gap-1 justify-between">
      <%= form.label :display_name, "Display Name (if different than Username)", class: "lowercase" %>
      <% form.object.errors.full_messages_for(:display_name).each do |msg| %>
        <span class="text-pink-500 text-sm lowercase"><%= msg %></span>
      <% end %>
    </div>
    <%= form.text_field :display_name, class: "w-full" %>
  </div>

  <div class="flex flex-col gap-1">
    <%= form.label :pronouns, "Pronouns", class: "lowercase" %>
    <%= form.text_field :pronouns, class: "w-full" %>
  </div>

  <div class="flex flex-col gap-1">
    <div class="flex gap-1 justify-between">
      <%= form.label :about, "About", class: "lowercase" %>
      <% form.object.errors.full_messages_for(:about).each do |msg| %>
        <span class="text-pink-500 text-sm lowercase"><%= msg %></span>
      <% end %>
    </div>
    <%= form.text_area :about, class: "w-full" %>
  </div>

  <%= form.submit class: "tracking-wide border-2 border-neutral-950 w-full py-1 hover:bg-neutral-950 hover:text-neutral-50 hover:cursor-pointer" %>
<% end %>