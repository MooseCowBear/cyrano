<%= form_with model: profile, class: "flex flex-col gap-2" do |form| %>
  <div class="flex flex-col gap-1">
    <div class="flex gap-1 justify-between">
      <%= form.label :username, "Username", class: "lowercase" %>
      <% form.object.errors.full_messages_for(:username).each do |msg| %>
        <span class="text-pink-500 text-sm lowercase"><%= msg %></span>
      <% end %>
    </div>
    <%= form.text_field :username, class: "w-full border-neutral-700" %>
  </div>

  <div class="flex flex-col gap-1">
    <div class="flex gap-1 justify-between">
      <%= form.label :display_name, "Display Name (if different than Username)", class: "lowercase" %>
      <% form.object.errors.full_messages_for(:display_name).each do |msg| %>
        <span class="text-pink-500 text-sm lowercase"><%= msg %></span>
      <% end %>
    </div>
    <%= form.text_field :display_name, class: "w-full border-neutral-700" %>
  </div>

  <div class="flex flex-col gap-1">
    <%= form.label :pronouns, "Pronouns", class: "lowercase" %>
    <%= form.text_field :pronouns, class: "w-full border-neutral-700" %>
  </div>

  <div class="flex flex-col gap-1">
    <div class="flex gap-1 justify-between">
      <%= form.label :about, "About", class: "lowercase" %>
      <% form.object.errors.full_messages_for(:about).each do |msg| %>
        <span class="text-pink-500 text-sm lowercase"><%= msg %></span>
      <% end %>
    </div>
    <%= form.text_area :about, class: "w-full border-neutral-700" %>
  </div>

  <div class="flex flex-col gap-1">
    <div class="flex gap-1 justify-between">
      <%= form.label :specialties, "Specialties", class: "lowercase" %>
      <% form.object.errors.full_messages_for(:specialties).each do |msg| %>
        <span class="text-pink-500 text-sm lowercase"><%= msg %></span>
      <% end %>
    </div>
    <div>
    <%= form.text_area :specialties, value: profile.specialties.join(", "), class: "w-full border-neutral-700" %>
    <small>Enter up to 5 specialties as a comma separated list</small>
  </div>

  <%= form.submit class: "w-full tracking-wide border rounded-full py-1 border-neutral-700 py-1 hover:bg-neutral-700 hover:text-neutral-50 hover:cursor-pointer" %>
<% end %>