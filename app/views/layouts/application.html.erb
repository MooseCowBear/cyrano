        </svg>
      <% end %>
      <% if user_signed_in? %>
        <%= button_to "Log out", destroy_user_session_path, method: :delete, class: "uppercase tracking-wide" %>
      <% else %>
        <%= link_to "Sign in", new_user_session_path, class: "uppercase tracking-wide" %>
      <% end %>
