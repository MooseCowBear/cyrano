<div id="<%= dom_id(writing_sample) %>" class="p-5 border bg-white shadow-md flex flex-col gap-2 items-start">
  <div class="flex gap-2 items-center">
    <h2 class="font-semibold uppercase"><%= title(writing_sample) %></h2>
    <% if writing_sample.selected %>
      <%= button_to writing_sample_path(writing_sample, writing_sample: { selected: false} ), method: :patch, aria: {label: "deselect"} do %>
        <svg class="w-7 h-7 fill-seafoam-100 translate-y-0.5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
          <path fill="" d="M12,17.27L18.18,21L16.54,13.97L22,9.24L14.81,8.62L12,2L9.19,8.62L2,9.24L7.45,13.97L5.82,21L12,17.27Z" />
        </svg>
      <% end %>
    <% else %>
      <%= button_to writing_sample_path(writing_sample, writing_sample: { selected: true }), method: :patch, aria: {label: "select"} do %>
        <svg class="w-7 h-7 fill-seafoam-100 translate-y-0.5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
          <path fill="" d="M12,15.39L8.24,17.66L9.23,13.38L5.91,10.5L10.29,10.13L12,6.09L13.71,10.13L18.09,10.5L14.77,13.38L15.76,17.66M22,9.24L14.81,8.63L12,2L9.19,8.63L2,9.24L7.45,13.97L5.82,21L12,17.27L18.18,21L16.54,13.97L22,9.24Z" />
        </svg>
      <% end %>
    <% end %>
  </div>
  <p class="whitespace-pre-wrap"><%= writing_sample.body %></p>
  <div class="flex gap-2">
    <% writing_sample.tags.each do |specialty| %>
      <span class="py-1 px-2 rounded bg-neutral-700 text-neutral-100"><%= specialty %></span>
    <% end %>
  </div>
  <%= link_to edit_writing_sample_path(writing_sample), aria: {label: "edit sample"}, class: "self-end" do %>
    <svg class="h-6 w-6 fill-neutral-950" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
      <path fill="" d="M18.13 12L19.39 10.74C19.83 10.3 20.39 10.06 21 10V9L15 3H5C3.89 3 3 3.89 3 5V19C3 20.1 3.89 21 5 21H11V19.13L11.13 19H5V5H12V12H18.13M14 4.5L19.5 10H14V4.5M19.13 13.83L21.17 15.87L15.04 22H13V19.96L19.13 13.83M22.85 14.19L21.87 15.17L19.83 13.13L20.81 12.15C21 11.95 21.33 11.95 21.53 12.15L22.85 13.47C23.05 13.67 23.05 14 22.85 14.19Z" />
    </svg>
  <% end %>
</div>