<!-- public facing product display -->
<!-- TODO: can this be dryed out? similar but not the same as writer show -->
<div class="rounded-t-lg p-5 bg-neutral-600 grid grid-cols-1 sm:grid-cols-[auto,_1fr] gap-5 text-neutral-50 mb-5">
  <span class="h-32 w-32 self-center justify-self-center rounded-full bg-seafoam-100 text-2xl text-neutral-50 font-semibold lowercase flex items-center justify-center">
    <%= @writer.initial %>
  </span>
  <div class="flex flex-col gap-3 self-center">
    <h2 class="uppercase text-3xl border-b border-neutral-50"><%= name(@writer.profile) %></h2>
    <div class="flex flex-wrap gap-1">
      <!-- TODO: replace temp buttons with actual -->
      <button class="px-3 py-1 rounded-full bg-neutral-50 text-neutral-700">w</button>
      <button class="px-3 py-1 rounded-full bg-neutral-50 text-neutral-700">?</button>
      <button class="px-3 py-1 rounded-full bg-neutral-50 text-neutral-700">message</button>
    </div>
    <div>
      <h3 class="uppercase tracking-wider font-semibold">Specialties</h3>
      <div class="flex flex-wrap gap-3">
        <% @writer.specialties.each do |specialty| %>
          <span class="py-1 px-2 rounded bg-seafoam-100 text-neutral-100"><%= specialty %></span>
        <% end %>
      </div>
    </div>
  </div>
</div>
<div class="grid grid-cols-fluid gap-3">
  <% @writer.products.each do |product| %>
    <%= render "product", product: product %>
  <% end %>
</div>