<%= form_with model: product, class: "flex flex-col gap-2" do |form| %>
  <div class="flex flex-col gap-1">
    <div class="flex gap-1 justify-between">
      <%= form.label :title, "Title", class: "lowercase" %>
      <% form.object.errors.full_messages_for(:title).each do |msg| %>
        <span class="text-pink-500 text-sm lowercase"><%= msg %></span>
      <% end %>
    </div>
    <%= form.text_field :title, class: "w-full border-neutral-700 py-1" %>
  </div>

  <div class="flex flex-col gap-1">
    <div class="flex gap-1 justify-between">
      <%= form.label :description, "Description", class: "lowercase" %>
      <% form.object.errors.full_messages_for(:description).each do |msg| %>
        <span class="text-pink-500 text-sm lowercase"><%= msg %></span>
      <% end %>
    </div>
    <%= form.text_area :description, class: "w-full border-neutral-700 py-1" %>
  </div>

  <div class="flex flex-col gap-1">
    <div class="flex gap-1 justify-between">
      <%= form.label :price, "Price (in USD)", class: "lowercase" %>
      <% form.object.errors.full_messages_for(:price).each do |msg| %>
        <span class="text-pink-500 text-sm lowercase"><%= msg %></span>
      <% end %>
    </div>
    <%= form.text_field :price, class: "w-full border-neutral-700 py-1" %>
  </div>

  <%= form.submit class: "w-full tracking-wide border rounded-full py-1 border-neutral-700 py-1 hover:bg-neutral-700 hover:text-neutral-50 hover:cursor-pointer" %>
<% end %>